{
  "name": "melonjs",
  "version": "15.2.1",
  "description": "melonJS Game Engine",
  "homepage": "http://www.melonjs.org/",
  "type": "module",
  "keywords": [
    "2D",
    "HTML5",
    "javascript",
    "TypeScript",
    "es6",
    "Canvas",
    "WebGL",
    "WebGL2",
    "WebAudio",
    "game",
    "engine",
    "tiled",
    "tileset",
    "mapeditor",
    "browser",
    "electron",
    "mobile",
    "cordova"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/melonjs/melonJS.git"
  },
  "bugs": {
    "url": "https://github.com/melonjs/melonJS/issues"
  },
  "license": "MIT",
  "author": "Olivier Biot (AltByte Pte Ltd)",
  "funding": "https://github.com/sponsors/melonjs",
  "engines": {
    "node": ">= 19"
  },
  "main": "dist/melonjs.module.js",
  "module": "dist/melonjs.module.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/melonjs.mjs",
    "dist/melonjs.module.js",
    "dist/types",
    "src/",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG"
  ],
  "dependencies": {
    "@teppeis/multimaps": "^3.0.0",
    "core-js": "^3.30.2",
    "earcut": "2.2.4",
    "eventemitter3": "^5.0.1",
    "howler": "2.2.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@fastify/static": "^6.10.1",
    "@melonjs/webdoc-theme": "^1.1.1",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-image": "^3.0.2",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@webdoc/cli": "^2.2.0",
    "chromedriver": "^113.0.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.40.0",
    "eslint-plugin-jsdoc": "^44.2.3",
    "expect": "^29.5.0",
    "expect-mocha-image-snapshot": "^3.0.13",
    "fastify": "^4.17.0",
    "mocha": "^10.2.0",
    "npm-self-link": "^1.1.7",
    "puppeteer": "^20.2.0",
    "rollup": "^3.21.7",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-string": "^3.0.0",
    "terser": "^5.17.3",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "build": "npm run lint && rollup -c --silent",
    "build:cd": "npm run lint && rollup -c --failAfterWarnings",
    "dist": " npm run build && mkdirp dist && cp -fR build/*.* dist/ && npm run types",
    "lint": "eslint src/** rollup.config.mjs",
    "pretest": "mkdirp tests/browser/public/lib && cp -f build/melonjs.module.js tests/browser/public/lib",
    "test": "npm run test-node && mocha ./tests/browser/spec/*.js --reporter spec --bail --timeout 10000",
    "test-node": "node build/melonjs.module.js",
    "doc-prod": "mkdirp docs && webdoc --quiet --site-root melonJS/docs -R README.md",
    "doc-local": "mkdirp docs && webdoc --quiet --site-root /docs -R README.md",
    "doc": "npm run doc-prod",
    "serve": "python3 -m http.server",
    "prepublishOnly": "npm run dist && npm run test",
    "clean": "del-cli --force build/*.* dist/*.* docs",
    "types": "tsc"
  }
}
